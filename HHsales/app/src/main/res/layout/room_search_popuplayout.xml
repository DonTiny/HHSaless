<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:id="@+id/popuplayout"
    android:layout_height="wrap_content"
    android:background="@drawable/table_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search_room_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="房间名称"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/search_room_no"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="房号"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/search_building_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="楼栋名称"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/search_room_structure"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="房间结构"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/search_product_type"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="产品类型"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/search_floor"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="楼层"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/search_heading"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="朝向"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/search_sales_status"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="销售状态"/>
</LinearLayout>
